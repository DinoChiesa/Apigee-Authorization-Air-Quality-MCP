<ProxyEndpoint name="well-known-oauth-protected-resource">

  <HTTPProxyConnection>
    <!-- The URL format is specified in IETF RFC 9728 Section 3. -->
    <!-- This may get replaced by the deployment script. -->
    <BasePath>/.well-known/oauth-protected-resource/air-quality-oauth/mcp</BasePath>
  </HTTPProxyConnection>

  <FaultRules/>
  <DefaultFaultRule name="default-fault-rule">
    <Step>
      <Name>AM-Inject-Proxy-Revision-Header</Name>
    </Step>
    <AlwaysEnforce>true</AlwaysEnforce>
  </DefaultFaultRule>

  <PostFlow name="PostFlow">
    <Response>
      <Step>
        <Name>AM-Clean-Response-Headers</Name>
      </Step>
      <Step>
        <Name>AM-Inject-Proxy-Revision-Header</Name>
      </Step>
    </Response>
  </PostFlow>

  <Flows>
    <Flow name="oauth-protected-resource-metadata">
      <!-- full path will be eg,
           /.well-known/oauth-protected-resource/path/to/mcp/server
      -->
      <Condition>
        (proxy.pathsuffix ~~ "/?") AND (request.verb = "GET")
      </Condition>
      <Response>
        <Step>
          <Name>AM-OAuth-Protected-Resource-Response</Name>
        </Step>
      </Response>
    </Flow>

    <Flow name="unknown-request">
      <Request>
        <Step>
          <Name>RF-Unknown-Request</Name>
        </Step>
      </Request>
    </Flow>

  </Flows>

  <RouteRule name='loopback'/>

</ProxyEndpoint>
