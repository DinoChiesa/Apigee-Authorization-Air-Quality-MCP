<ProxyEndpoint name="endpoint1">

  <HTTPProxyConnection>
    <BasePath>/air-quality-oauth</BasePath>
  </HTTPProxyConnection>

  <FaultRules/>
  <DefaultFaultRule name="default-fault-rule">
    <Step>
      <Name>AM-Inject-Proxy-Revision-Header</Name>
    </Step>
    <Step>
      <Name>AM-Diags</Name>
    </Step>
    <Step>
      <Name>AM-JSONRPC-Authorization-Error</Name>
      <Condition>JWT.failed = true</Condition>
    </Step>
    <AlwaysEnforce>true</AlwaysEnforce>
  </DefaultFaultRule>

  <PreFlow name="PreFlow">
    <Response>
    </Response>
  </PreFlow>

  <PostFlow name="PostFlow">
    <Request/>
    <Response>
      <Step>
        <Name>AM-Inject-Proxy-Revision-Header</Name>
      </Step>
    </Response>
  </PostFlow>

  <PostClientFlow name="PostFlow">
    <Request/>
    <Response>
    </Response>
  </PostClientFlow>

  <EventFlow content-type="text/event-stream">
    <Response>
    </Response>
  </EventFlow>

  <Flows>

    <Flow name="mcp">
      <Request>

        <!--
            This flow checks authorization only for MCP tools/call .
        -->
        <Step>
          <Condition>(request.verb = "POST") and NOT (request.header.content-type = "application/json")</Condition>
          <Name>RF-Invalid-Media-Type</Name>
        </Step>

        <Step>
          <Name>AM-Extract-JSONRPC-Request-Data</Name>
        </Step>

        <Step>
          <Condition>extracted.mcp_method = "tools/call" AND
                 request.header.authorization = null</Condition>
          <Name>RF-Missing-Authz-Header</Name>
        </Step>

        <Step>
          <!-- special case tools/list, initialize, etc and allow it unauthenticated -->
          <Condition>extracted.mcp_method = "tools/call"</Condition>
          <Name>VerifyJWT-1</Name>
        </Step>

        <!--
            Optional additional checks:
            - check API Product Authorization here via VerifyAPIKey
            - enforce a rate limit via Quota
            - perform client-based routing

        <Step>
          <Name>VerifyAPIKey-1</Name>
        </Step>
        -->

      </Request>

      <Response>
      </Response>

      <Condition>
        proxy.pathsuffix ~~ "/mcp/?" and
        (request.verb = "GET" OR request.verb = "POST")
      </Condition>
    </Flow>

  </Flows>

  <RouteRule name='rule1'>
    <TargetEndpoint>target1</TargetEndpoint>
  </RouteRule>

</ProxyEndpoint>
